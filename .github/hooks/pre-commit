#!/bin/sh

# Pre-commit hook to ensure database changes are exported to JSON files

echo "ğŸ” Checking for database changes..."

# Export database to JSON
echo "ğŸ“¦ Exporting database to JSON files..."
npm run export-json

# If export was successful, stage the JSON files
if [ $? -eq 0 ]; then
  echo "âœ… Database exported successfully."
  
  # Add generated JSON files to the commit
  git add src/data/*.json
  git add src/data/vendors/*.json
  
  echo "âœ… Added generated JSON files to the commit."
else
  echo "âŒ Error exporting database. Please fix the issues before committing."
  exit 1
fi

# Validate models
echo "ğŸ” Validating models..."
npm run validate-models

if [ $? -ne 0 ]; then
  echo "âŒ Model validation failed. Please fix the issues before committing."
  exit 1
fi

# Validate pricing data
echo "ğŸ’° Validating pricing data..."
npm run pricing:validate

if [ $? -ne 0 ]; then
  echo "âŒ Pricing validation failed. Please fix the issues before committing."
  exit 1
fi

# Run TypeScript type checking
echo "ğŸ” Running TypeScript type checking..."
npm run typecheck

if [ $? -ne 0 ]; then
  echo "âŒ TypeScript check failed. Please fix type errors before committing."
  exit 1
fi

echo "âœ… All checks passed!"
exit 0